// ts 编译器配置文件
{
  "include": [
    //  那些文件需要编译，**任意目录，*任意文件
    "./src/**/*"
  ],
  /*  "exclude": [
     那些不需要编译
      "node_modules"
   ],*/

  //  编译器选项
  "compilerOptions": {
    // ts 被编为ES的版本
    "target": "es5",
    // 指定模块化规范
    "module": "commonjs",
    // 编译后文件位置
    "outDir": "./dist",
    //    代码合为一个文件
    //    "outFile": "./dist/app.js",
    // 是否对js 进行编译
    //    "allowJs": false,
    //    是否检查js代码符合规范
    //    "checkJs": true,
    // 是否移除注释
    "removeComments": true,
    // 不生成编译后文件
    "noEmit": false,
    // 有错误不生成编译后文件
    "noEmitOnError": true,
    //    严格模式总开关
    "strict": true,
    // 编译后文件是否使用严格模式
    "alwaysStrict": true,
    //    不允许隐式any
    "noImplicitAny": true,
    //    不允许不明确的this
    "noImplicitThis": true,
    //    严格检查空值
    "strictNullChecks": true
  }
}